extends layout

block content
    body.form
        div.logo-section.login-logo
            img(src='/images/icon.png')
            h3 Swarm Inc.
        h2.form_title User Login
        form(action='/data/login', method='POST')
            |             E-Mail:
            input(type='text', name='email')
            br
            |             Password:
            input(type='password', name='password')
            br
            a.pass-forget(href="/passResetForm") Forgot your password?
            br
            input.button(type='submit', value='Submit')